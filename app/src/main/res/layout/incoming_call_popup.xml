<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/popLay"
            android:layout_width="1070px"
            android:layout_height="190px"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/coming_call_noti_box"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingRight="@dimen/_15sdp">

            <LinearLayout
                android:id="@+id/layCancelCall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgDone"
                    android:layout_width="97px"
                    android:layout_height="97px"
                    android:gravity="center"
                    android:singleLine="true"
                    android:src="@drawable/decline_button"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/layAns"
                android:layout_toEndOf="@+id/layCancelCall"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand_bold"
                    android:gravity="top|center_vertical|center_horizontal|center"
                    android:padding="0dp"
                    android:singleLine="true"
                    android:text="Color Call"
                    android:textColor="#fff"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="188px"
                    android:layout_height="47px"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:background="@drawable/call_waiting_bg"
                    android:fontFamily="@font/quicksand_bold"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="Call Waiting"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_7sdp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layAns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:tag="0"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/btnBack1"
                    android:layout_width="97px"
                    android:layout_height="97px"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:src="@drawable/accept_button"
                    android:visibility="visible" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
