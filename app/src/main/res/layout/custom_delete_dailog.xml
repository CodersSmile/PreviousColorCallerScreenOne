<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/liner_main_delete_dailog"
        android:layout_width="868px"
        android:layout_height="663px"
        android:background="@drawable/want_to_delete_with_top_ic_n_text"
        android:gravity="bottom|center_vertical|center_horizontal|center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_15sdp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_no"
                android:layout_width="210px"
                android:layout_height="80px"
                android:layout_marginRight="@dimen/_20sdp"
                android:src="@drawable/no_event" />

            <ImageView
                android:id="@+id/img_yes"
                android:layout_width="210px"
                android:layout_height="80px"
                android:src="@drawable/yes_event" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
