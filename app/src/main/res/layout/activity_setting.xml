<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main"
    android:gravity="top|center_vertical|center_horizontal|center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/liner_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/raw_actionbar" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/liner_call_flash"
        android:layout_width="938px"
        android:layout_height="358px"
        android:background="@drawable/call_flash_n_theme_box_bg"
        android:gravity="bottom"
        android:layout_marginTop="@dimen/_25sdp"
        android:orientation="vertical"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_bold"
            android:gravity="center"
            android:maxLines="1"
            android:text="Caller Flash"
            android:textColor="@color/blacktextcolor"
            android:textSize="@dimen/_15sdp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:fontFamily="@font/quicksand_medium"
            android:gravity="center"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="Make Your Call Unique With Different Caller Themes"
            android:textSize="@dimen/_10sdp" />

        <ImageView
            android:id="@+id/onOffFlashlight"
            android:layout_width="138px"
            android:layout_height="78px"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/_10sdp"
            android:adjustViewBounds="true"
            android:src="@drawable/off_btn" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/liner_caller_flash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/call_flash_n_theme_box_bg"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_bold"
            android:gravity="center"
            android:maxLines="1"
            android:text="Caller Theme"
            android:textColor="@color/blacktextcolor"
            android:textSize="@dimen/_15sdp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:fontFamily="@font/quicksand_medium"
            android:gravity="center"
            android:maxLines="1"
            android:text="Make Your Incoming Calls Visible With Color Call Flash"
            android:textSize="@dimen/_9sdp" />

        <ImageView
            android:id="@+id/caller_theme"
            android:layout_width="138px"
            android:layout_height="78px"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/_10sdp"
            android:adjustViewBounds="true"
            android:src="@drawable/on_btn" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/liner_app_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/share_rate_privacy_box_bg"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_13sdp"
        android:paddingRight="@dimen/_13sdp">

        <LinearLayout
            android:id="@+id/liner_share"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_share"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/setting_share" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:fontFamily="@font/quicksand_bold"
                android:text="Share App"
                android:textColor="@color/blacktextcolor"
                android:textSize="@dimen/_13sdp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/liner_rate"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_rate"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/setting_rate" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:fontFamily="@font/quicksand_bold"
                android:text="Rate App"
                android:textColor="@color/blacktextcolor"
                android:textSize="@dimen/_13sdp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/liner_privacy_policy"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="right|center_vertical|center_horizontal|center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_privacy_policy"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/setting_privacy" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:fontFamily="@font/quicksand_bold"
                android:text="Privacy Policy"
                android:textColor="@color/blacktextcolor"
                android:textSize="@dimen/_13sdp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
