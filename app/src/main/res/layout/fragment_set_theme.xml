<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center_vertical|center_horizontal|center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:fontFamily="@font/quicksand_bold"
        android:text="Default Theme"
        android:textColor="@color/black" />

    <RelativeLayout
        android:id="@+id/relative_main"
        android:layout_width="1040px"
        android:layout_height="620px"
        android:gravity="center"
        android:padding="@dimen/_5sdp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/img_current_theam"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/default_theme_bg_press"
            android:padding="@dimen/_2sdp"
            android:scaleType="fitXY"
            app:civ_border_color="#000000"
            app:civ_border_width="@dimen/_4sdp"
            app:riv_corner_radius="@dimen/_4sdp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:fontFamily="@font/quicksand_bold"
        android:text="Current Theme for Individual Contacts"
        android:textColor="@color/black" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclecontettheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:visibility="gone" />
</LinearLayout>
