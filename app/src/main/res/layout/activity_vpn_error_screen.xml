<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/comman_bg"
    tools:context=".Activity.Theme_Activity_VpnErrorScreen">
    <androidx.core.widget.NestedScrollView
        app:layout_constraintBottom_toTopOf="@+id/ad_banner"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_300sdp">
                <LinearLayout
                    android:id="@+id/native_ads"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_300sdp">
                    <com.themescreen.flashcolor.stylescreen.shimer.ShimmerFrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <include layout="@layout/layout_ads_native_admob"/>
                    </com.themescreen.flashcolor.stylescreen.shimer.ShimmerFrameLayout>
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:background="@drawable/button_design"
                android:fontFamily="@font/quicksand_medium"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:gravity="center"
                android:text="START"
                android:layout_gravity="center_horizontal"
                android:id="@+id/img_color_call_theme"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="60dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.83" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/ad_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>